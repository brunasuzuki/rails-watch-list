<div class="mt-5">
  <h1>Lists</h1>
  <%# botao com o caminho dele %>
  <%= link_to 'Create a list', new_list_path, class: 'btn btn-success' %>

  <%# @lists do controllers %>
  <% @lists.each do |list| %>
    <%= link_to list_path(list) do %>
      <p><%= list.name %></p>
    <% end %>
  <% end %>
</div>
